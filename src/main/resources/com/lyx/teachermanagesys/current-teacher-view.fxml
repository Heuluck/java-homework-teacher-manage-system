<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<VBox alignment="CENTER" spacing="20.0"
      stylesheets="@CSS/current-teacher-view.css" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lyx.teachermanagesys.CurrentTeacherController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="20.0">
        <HBox alignment="CENTER">
            <Label styleClass="titleText" text="教师"/>
            <Label styleClass="titleText" fx:id="titleTeachName"/>
        </HBox>
        <HBox spacing="20.0" alignment="CENTER">
            <VBox spacing="10.0">
                <Label text="教师号"/>
                <Label fx:id="teachId"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="姓名"/>
                <Label fx:id="teachName"/>
            </VBox>
        </HBox>
        <HBox spacing="20.0" alignment="CENTER">
            <VBox spacing="10.0">
                <Label text="性别"/>
                <Label fx:id="teachSex"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="职称"/>
                <Label fx:id="teachRank"/>
            </VBox>
        </HBox>
        <HBox spacing="20.0" alignment="CENTER">
            <VBox spacing="10.0">
                <Label text="理论课时"/>
                <Label fx:id="theoryLength"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="实验课时"/>
                <Label fx:id="labLength"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="单个教学任务总课时"/>
                <Label fx:id="totalLength"/>
            </VBox>
        </HBox>
        <HBox spacing="30.0" alignment="CENTER">
            <VBox spacing="10.0">
                <HBox spacing="10.0">
                    <Label text="教学班级"/>
                    <Button text="添加"/>
                </HBox>
                <ScrollPane styleClass="classListOuter" fitToWidth="true" minWidth="300.0">
                    <VBox fx:id="teachClasses"/>
                </ScrollPane>
            </VBox>
            <VBox spacing="10.0">
                <HBox spacing="10.0">
                    <Label text="认教课程"/>
                    <Button text="添加"/>
                </HBox>
                <ScrollPane styleClass="lessonListOuter" fitToWidth="true" minWidth="300.0">
                    <VBox fx:id="teachLessons"/>
                </ScrollPane>
            </VBox>
        </HBox>
    </VBox>
</VBox>