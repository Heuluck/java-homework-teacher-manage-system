<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0"
      stylesheets="@CSS/main-view.css" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lyx.teachermanagesys.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="20.0">
        <Label styleClass="titleText" text="教师工作量管理系统"/>
        <HBox alignment="CENTER" spacing="20.0">
            <Button styleClass="newTeacher" text="新建教师" onAction="#onNewButtonClick"/>
            <Button styleClass="currentTeacher" text="当前教师信息" onAction="#onCurrentTeachButtonClick"/>
            <Button text="加载示例信息" onAction="#onLoadDefaultTeachButtonClick"/>
            <Button styleClass="linkDB" text="连接数据库" onAction="#onNewButtonClick"/>
        </HBox>
    </VBox>
</VBox>